---
const { title, content, href } = Astro.props;

const rawBaseUrl = import.meta.env.BASE_URL || '/';
const baseUrl = rawBaseUrl === '/' ? '' : rawBaseUrl.replace(/\/$/, '');
const getHref = (path: string) => `${baseUrl}${path.startsWith('/') ? path : `/${path}`}`;
---

<div
  class="flex flex-col max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-100 dark:hover:bg-gray-700"
>
  <a href={getHref(`/tags/${href}`)}>
    <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{title}</h5>
  </a>
  <p class="grow mb-3 font-normal text-gray-700 dark:text-gray-400">{content}</p>
  <div class="self-end">
    <a
      href={getHref(`/tags/${href}`)}
      class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-primary-700 rounded-lg hover:bg-primary-500 focus:ring-4 focus:outline-none focus:ring-primary-300 dark:bg-primary-600 dark:focus:ring-primary-800"
    >
      Read more
    </a>
  </div>
</div>
