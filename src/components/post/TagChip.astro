---
interface Props {
  tag: string;
  href: string;
}
const { tag } = Astro.props;
const rawBaseUrl = import.meta.env.BASE_URL || '/';
const baseUrl = rawBaseUrl === '/' ? '' : rawBaseUrl.replace(/\/$/, '');
const href = `${baseUrl}/tags/${tag}`;
---

<a
  href={href}
  class="bg-gray-100 dark:bg-gray-700 rounded dark:text-gray-300 hover:bg-primary-500 hover:text-gray-100 text-sm font-medium me-2 px-2.5 py-0.5"
>
  #{tag}
</a>
