---
import Head from "../components/Head.astro";
import Header from "../components/header/Header.astro";
import HeaderDropdown from "../components/header/HeaderDropdown.astro";  
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="pl" class="app-bg overflow-y-scroll">


  <Head title={title} description={description} />

  <body class="flex min-h-screen flex-col text-black dark:text-white">
    <!-- <Header /> -->
    <HeaderDropdown />
    

    <main
      id="main-content"
      class="flex-1 w-full max-w-[1400px] mx-auto px-4"
    >
      <div class="mt-9">
        <slot />
      </div>
    </main>

    <Footer />

    <script
      src="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js"
      defer
    ></script>
  </body>
</html>