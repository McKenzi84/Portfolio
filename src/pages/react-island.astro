---
import BaseLayoutNew from "../layouts/BaseLayoutNew.astro";
import SimpleCalculator from "../components/SimpleCalculator.jsx";
---

<BaseLayoutNew
  title="React Island Example in Astro"
  description="Astro Islands - Learn how to build interactive web experiences with Astro Islands architecture."
>
  <section
    aria-labelledby="reactisland-heading"
    class="relative mx-auto mt-12 max-w-4xl px-4 border rounded-lg p-6 shadow-lg bg-white dark:bg-gray-800"
  >
    <h3 id="reactisland-heading" class="mb-2 text-3xl font-bold text-gray-900 dark:text-white">
      Sample implementation of React Island in Astro
    </h3>

    <div class="mt-12 flex flex-col items-center gap-10 md:flex-row md:justify-center">
      <SimpleCalculator client:visible />
      <!-- <SimpleCalculator client:visible /> -->
    </div>
  </section>
</BaseLayoutNew>
